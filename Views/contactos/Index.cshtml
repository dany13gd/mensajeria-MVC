@model IEnumerable<MensajeriaMVC.Models.contactos>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Contactos";
}
<div class="row">
    <div class="col-12">
        <h2>Contactos</h2>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <table class="table table-responsive table-stripped table-sm table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.organizacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.puesto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.archivar_como_a)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.mostrar_como)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.pagina_web)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.direccion_im)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tel_trabajo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tel_particular)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fax_trabajo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tel_movil)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.direccion_trabajo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.direccion_correspondencia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.notas)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.imagen)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.organizacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.puesto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.archivar_como_a)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mostrar_como)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pagina_web)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.direccion_im)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tel_trabajo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tel_particular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fax_trabajo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tel_movil)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.direccion_trabajo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.direccion_correspondencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.notas)
                    </td>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.imagen)" />
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
