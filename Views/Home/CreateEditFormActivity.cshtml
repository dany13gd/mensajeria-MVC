@model MVC_2.Models.Contactos_android

@{
    Layout = null;
}

<!DOCTYPE html>


<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>mensajeria</title>
    <style>
        .btn a {
            color: white;
            text-decoration: none
        }

        body {
            background-color: #F1F1F1;
        }
    </style>
</head>
<body>
    <div class=" panel panel-success">

        <div style="background-color: aquamarine">
            <div class="panel-heading text-center"><h4>Ingresar Contacto</h4></div>
        </div>
        <div class="panel_body">


            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Nombre:</label>
                    @Html.TextBoxFor(x => x.name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Organizacion:</label>
                    @Html.TextBoxFor(x => x.organization, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Puesto:</label>
                    @Html.TextBoxFor(x => x.position, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Archivar como:</label>
                    @Html.TextBoxFor(x => x.storeType, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Correo Electronico:</label>
                    @Html.TextBoxFor(x => x.email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mostrar como:</label>
                    @Html.TextBoxFor(x => x.showAs, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Pagina web:</label>
                    @Html.TextBoxFor(x => x.webSite, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Direccion IM:</label>
                    @Html.TextBoxFor(x => x.imAddress, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Telefono trabajo:</label>
                    @Html.TextBoxFor(x => x.phoneWork, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Telefono casa:</label>
                    @Html.TextBoxFor(x => x.phoneHome, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Fax:</label>
                    @Html.TextBoxFor(x => x.faxWork, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Celular:</label>
                    @Html.TextBoxFor(x => x.phoneMovile, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Direccion trabajo:</label>
                    @Html.TextBoxFor(x => x.workAddress, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Direccion para la correspondencia:</label>
                    @Html.CheckBoxFor(x => x.correspondence, new { x = "1" })

                </div>



                @*<div class="form-group">
                         <label>Asistiras?:</label>
                         @Html.DropDownListFor(x => x.WillAttend, new[] {
                                 new SelectListItem() {Text = "Si, estare ahi.",
                                     Value = bool.TrueString},
                                 new SelectListItem() {Text = "No, no podre asistir.",
                                     Value = bool.FalseString}
                    }, "Escoge una opcion", new { @class = "form-control" })*@
                @*</div>*@
                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Guardar" />
                    <div class="btn btn-success" typeof="submit">

                        @Html.ActionLink("VOLVER", "MainActivity")
                    </div>
                </div>



            }
        </div>
    </div>
</body>
</html>